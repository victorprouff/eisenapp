{
  "$schema": "https://raw.githubusercontent.com/nicegui/nicegui/main/nicegui/tauri/tauri-conf-schema.json",
  "productName": "Eisenhower Tasks",
  "version": "1.0.0",
  "identifier": "com.eisenhower.tasks-rust",
  "build": {
    "frontendDist": "../src"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Matrice d'Eisenhower",
        "width": 1400,
        "height": 900,
        "minWidth": 1000,
        "minHeight": 700,
        "decorations": true,
        "dragDropEnabled": false
      }
    ]
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "createUpdaterArtifacts": true,
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "updater": {
      "pubkey": "REMPLACER_PAR_LA_CLE_PUBLIQUE",
      "endpoints": [
        "https://github.com/victorprouff/eisenhower-tasks-rust/releases/latest/download/latest.json"
      ],
      "windows": { "installMode": "passive" }
    }
  }
}
